<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje"
            android:visibility="invisible"
            android:id="@+id/idMensaje"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17/10/2019"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:id="@+id/post_item_fecha"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp" android:paddingBottom="20dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <TextView
                    android:id="@+id/post_item_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Qué es npm?"
                    android:textColor="#007bff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="node, js, npm, javascript"
                    android:textColor="#007bff"
                    android:layout_alignParentRight="true"
                    android:paddingRight="10dp"
                    android:id="@+id/post_item_tags"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingTop="40dp"
                    >
                    <TextView
                        android:id="@+id/post_item_descripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:text="JavaScript ha pasado de ser un lenguaje utilizado para brindar interactividad
    a las páginas web, a ser utilizado ahora también en el lado de los servidores gracias a Node.js.
    Si aún no tienes claro qué es Node.js, puedes revisar este artículo sobre qué es Node.js,
    " />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="130dp"
                    >

                    <TextView
                        android:id="@+id/post_item_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Por: Alberto Gutierrez (agutierrez@itla.com)"
                        android:textColor="#30ab54" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="150dp"
                    >
                    <TextView
                        android:id="@+id/post_item_vista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:paddingLeft="10dp"
                        android:text="123 Vistas"
                        android:layout_alignParentLeft="true"
                        android:textColor="#153a61" />
                    <TextView
                        android:id="@+id/post_item_comentarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="135dp"
                        android:text="123 Comentarios"
                        android:textColor="#153a61" />
                    <TextView
                        android:id="@+id/post_item_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="10dp"
                        android:text="10 Like" />
                </RelativeLayout>


            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>


</LinearLayout>